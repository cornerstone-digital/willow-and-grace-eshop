{
  "name": "willow-and-grace-eshop",
  "version": "0.1.0",
  "main": "index.js",
  "author": "Willow & Grace Aromas <info@willowandgracearomas.co.uk>",
  "license": "MIT",
  "scripts": {
    "// DevTools": "---------------------------------------------------------------------------------------------------------------",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.babel.js",
    "profile": "cross-env NODE_ENV=production webpack --profile --json --config webpack.config.babel.js > ./dist/profile.json && webpack-bundle-analyzer ./dist/profile.json",
    "prestart": "rimraf dist",
    "start": "cross-env WEBPACK_IS_DEV_SERVER=true NODE_ENV=development webpack serve --config .tools/webpack/webpack.config.ts",
    "// Unit tests": "-----------------------------------------------------------------------------------------------------------------------",
    "test": "jest --verbose --passWithNoTests",
    "test:cc": "jest --coverage",
    "test:ci": "yarn test:cc --ci",
    "test:watch": "jest --watch --verbose",
    "precommit": "lint-staged",
    "check-types": "tsc",
    "todo": "leasot 'src/**/*.{js, jsx,ts,tsx}' -x",
    "// Static Code Analysis": "------------------------------------------------------------------------------------------------------------------",
    "sonar": "sonar-scanner",
    "start:sonar": "docker run -d --name sonarqube -p 9001:9000 sonarqube:latest",
    "sonar:local": "  start-test 'start:sonar' http-get://localhost:9001 'yarn sonar -Dsonar.host.url=http://localhost:9001'",
    "lint:styles:lintfix": "eslint ./src --ext .scss.d.ts --fix",
    "lint:styles": "stylelint \"src/**/*.scss\"",
    "lint:js": "eslint ./src --ext .js,.jsx,.ts,.tsx --fix",
    "lint": "yarn check-types && yarn lint:styles && yarn lint:js",
    "// Semantic Releasing": "---------------------------------------------------------------------------------------------------------------",
    "semantic-release": "semantic-release",
    "release:dryrun": "yarn semantic-release --no-ci --dry-run"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"yarn commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest-junit": {
    "outputDirectory": ".testresults",
    "outputName": "results-jest.xml",
    "uniqueOutputName": "false"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false,
    "stepDefinitions": "cypress/integration/steps"
  },
  "nyc": {
    "report-dir": ".testresults/cypress-coverage",
    "include": ["src/**/*.{ts,tsx}"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit",
      "post-commit": "git update-index --again",
      "pre-push": "yarn check-types && yarn test && yarn lint && yarn todo"
    }
  },
  "importSort": {
    ".ts, .tsx": {
      "style": "module-and-prefix",
      "parser": "typescript"
    },
    ".js, .jsx": {
      "style": "module-and-prefix",
      "parser": "babylon"
    }
  },
